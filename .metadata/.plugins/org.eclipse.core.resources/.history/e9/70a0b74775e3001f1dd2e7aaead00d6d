<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page import="java.util.*, dto.*, dao.*"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
	<%
		request.setCharacterEncoding("UTF-8");
		
		String bookId = request.getParameter("bookId");
		String name = request.getParameter("name");
		String unitPrice = request.getParameter("unitPrice");
		String author = request.getParameter("author");
		String publisher = request.getParameter("publisher");
		String releaseDate = request.getParameter("releaseDate");
		String description = request.getParameter("description");
		String category = request.getParameter("category");
		String unisInStock = request.getParameter("unisInStock");
		String condition = request.getParameter("condition");
		
		int price;
		
		if(unitPrice.isEmpty()){
			price = 0;
		} else {
			price = Integer.valueOf(unitPrice);
		}
		
		long stock;
		
		try {
		    if(unisInStock.isEmpty()){
		        stock = 0;
		    } else {
		        stock = Long.parseLong(unisInStock);  // Long.valueOf 대신 Long.parseLong을 사용
		    }
		} catch (NumberFormatException e) {
		    // 숫자가 아닌 값이 들어올 경우 예외 처리, 예를 들어 0으로 설정
		    stock = 0;
		    e.printStackTrace();  // 예외 로그를 남길 수 있음
		}

		
		BookRepository dao = BookRepository.getInstance();
		
		Book newBook = new Book();
		newBook.setBookId(bookId);
		newBook.setName(name);
		newBook.setUnitPrice(price);
		newBook.setAuthor(author);
		newBook.setPublisher(publisher);
		newBook.setReleaseDate(releaseDate);
		newBook.setDescription(description);
		newBook.setCategory(category);
		newBook.setUnitsInStock(stock);
		newBook.setCondition(condition);
		
		dao.addBook(newBook);
		
		response.sendRedirect("books.jsp");
	%>
</body>
</html>